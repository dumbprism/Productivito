<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Title Input (Optional) -->
    <EditText
        android:id="@+id/journalTitleInput"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Title (Optional)"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Journal Content Input -->
    <EditText
        android:id="@+id/journalContentInput"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:hint="Write your journal here..."
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:inputType="textMultiLine"
        android:minHeight="200dp"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/journalTitleInput"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Start Journal Button -->
    <Button
        android:id="@+id/startJournalButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Journal"
        app:layout_constraintTop_toBottomOf="@id/journalContentInput"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Save Button -->
    <Button
        android:id="@+id/saveJournalButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        app:layout_constraintTop_toBottomOf="@id/startJournalButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
